<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorTrans"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="15dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="15sp"
            android:textColor="@color/colorBlueFonce"
            android:textStyle="bold"
            android:paddingBottom="5dp" />
        
        <ImageView
            android:id="@+id/rImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/logo"/>

        <TextView
            android:id="@+id/rDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Description"
            android:textSize="20dp"
            android:textColor="@color/colorBlueFonce"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/rTest"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="test"
            android:textSize="20dp"
            android:textColor="@color/colorBlueFonce"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/rLatitude"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="latitude"
            android:textSize="20dp"
            android:textColor="@color/colorBlueFonce"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/rLongitude"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="longitude"
            android:textSize="20dp"
            android:textColor="@color/colorBlueFonce"
            android:paddingTop="5dp"/>

        <TextView
            android:id="@+id/rImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="longitude"
            android:textSize="20dp"
            android:textColor="@color/colorBlueFonce"
            android:paddingTop="5dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>