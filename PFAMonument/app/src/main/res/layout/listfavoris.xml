<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/colorTrans"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:contentPadding="15dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/favImageView"
            android:layout_width="130dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/loading2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/favTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="15sp"
                android:textColor="@color/colorBlueFonce"
                android:textStyle="bold"
                android:paddingTop="35dp"
                android:paddingLeft="10dp"/>

            <TextView
                android:id="@+id/favDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Description"
                android:textSize="20dp"
                android:textColor="@color/colorBlueFonce"
                android:paddingTop="5dp"/>

            <ImageView
                android:id="@+id/favFavoris"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fav2"
                android:padding="5dp"/>

            <TextView
                android:id="@+id/favTest"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Description"
                android:textSize="20dp"
                android:textColor="@color/colorBlueFonce"
                android:paddingTop="5dp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>